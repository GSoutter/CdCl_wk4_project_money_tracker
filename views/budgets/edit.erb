 <header>
<h1>Edit Transaction</h1>
</header>

<form action="/budgets/" method="post">

  <label>
    Name:
    <select class="select-transaction" name="name" value="" >
      <% for budget in @budgets%>
        <option value=<%= budget %>> <%= budget %> </option>
      <% end %>
    </select>
  </label>
  <br>

  <label>
    Amount: <input type="number" name="budget" value="" min= 0.00 step=0.01>
  </label>
  <br>

  <input class="btn btn--action" type='submit' value="submit changes">

</form>
